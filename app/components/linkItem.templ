package components

import "github.com/AslanSN/CurriculumVitae/helpers"

templ LinkItem(href templ.SafeURL, classes interface{}) {
	<a
		class={ helpers.FormatClasses(classes) }
		href={ href }
		target="_blank"
		rel="noopener noreferrer"
	>
		<span class="cursor-pointer w-full">
			{ children... }
		</span>
	</a>
}
